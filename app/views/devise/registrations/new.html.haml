-provide(:title, "Sign up")
%h1.page-header Sign up
.row
  .col-sm-6
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = render 'shared/error_messages', object: f.object
      .form-group
        = f.label :fname, "First Name"
        = f.text_field :fname, :autofocus => true
      .form-group
        = f.label :lname, "Last Name"
        = f.text_field :lname, :autofocus => true
      .form-group
        = f.label :email
        = f.email_field :email
      .form-group
        = f.label :password
        = f.password_field :password
      = f.submit "Create my account", :class => "btn btn-submit btn-lg "
    %hr.spacer
    = render "devise/shared/links"
  .col-sm-4.col-sm-offset-1
    .callout-info
      %h4 Name
      %p To protect your privacy, only your first name will be displayed in the public areas of the site.

